<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:background">#000000</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Dimmed" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/blue</item>  <!--Buttons -->
        <item name="android:textColorPrimary">@color/black</item> <!-- Main text -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SlotSubText" parent="FontSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SlotText" parent="FontSize">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <style name="SidebarText" parent="FontSize">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="VipHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/FontSize</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="DataText" parent="FontSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="ShopTabs" parent="FontSize">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:onClick">changeTab</item>
        <item name="android:background">@drawable/background_brown</item>
    </style>

    <style name="MinigameChest" parent="MinigameDice">
        <item name="android:onClick">selectChest</item>
    </style>

    <style name="MinigameDice">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:src">@drawable/chest_1</item>
    </style>

    <style name="DialogButton" parent="LargeFontSize">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_brown</item>
    </style>

    <style name="PassTabText" parent="FontSize">
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="FontSize">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LargeFontSize">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SlotClickArea">
        <item name="android:onClick">selectSlot</item>
        <item name="layout_heightPercent">6.66%</item>
        <item name="layout_widthPercent">6.66%</item>
        <item name="android:background">@drawable/highlight</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="SlotPerson">
        <item name="layout_heightPercent">6.66%</item>
        <item name="layout_widthPercent">6.66%</item>
    </style>

    <style name="VerticalScrollbar">
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_vertical_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/custom_scroll_vertical</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/custom_scroll_vertical_thumb</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/custom_scroll_vertical</item>
        <item name="android:scrollbarSize">12dp</item>
    </style>

</resources>
