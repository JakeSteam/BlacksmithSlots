<androidx.percentlayout.widget.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map11"/>

    <ImageView
        android:tag="47"
        style="@style/SlotClickArea"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="19.98%"
        app:layout_marginTopPercent="33.33%"
        app:layout_marginLeftPercent="13.32%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_4"
        app:layout_marginTopPercent="33.33%"
        app:layout_marginLeftPercent="26.64%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="48"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="39.96%"
        app:layout_marginLeftPercent="53.28%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_20"
        app:layout_marginTopPercent="39.96%"
        app:layout_marginLeftPercent="53.28%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="49"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="46.62%"
        app:layout_marginLeftPercent="59.94%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_21"
        app:layout_marginTopPercent="46.62%"
        app:layout_marginLeftPercent="59.94%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="50"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="53.28%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_22"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="53.28%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="51"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="46.62%"
        app:layout_marginLeftPercent="46.62%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_23"
        app:layout_marginTopPercent="46.62%"
        app:layout_marginLeftPercent="46.62%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"
            android:alpha="0.8"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:background="@drawable/box_orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"
            android:maxLines="5"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>