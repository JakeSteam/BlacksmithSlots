<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map10"/>

    <ImageView
        android:tag="43"
        style="@style/SlotClickArea"
        app:layout_heightPercent="33.33%"
        app:layout_widthPercent="19.98%"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="26.64%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_4"
        app:layout_marginTopPercent="79.92%"
        app:layout_marginLeftPercent="26.64%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="44"
        style="@style/SlotClickArea"
        app:layout_widthPercent="19.98%"
        app:layout_heightPercent="19.98%"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="26.64%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_4"
        app:layout_marginTopPercent="39.96%"
        app:layout_marginLeftPercent="33.33%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="45"
        style="@style/SlotClickArea"
        app:layout_heightPercent="24%"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="16%"
        app:layout_marginLeftPercent="46.62%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_2"
        app:layout_marginTopPercent="33.33%"
        app:layout_marginLeftPercent="53.28%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="46"
        style="@style/SlotClickArea"
        app:layout_heightPercent="26.64%"
        app:layout_marginTopPercent="46.62%"
        app:layout_marginLeftPercent="66.66%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_4"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="66.66%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/redText"
            android:textSize="30sp"
            android:gravity="center" />
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>