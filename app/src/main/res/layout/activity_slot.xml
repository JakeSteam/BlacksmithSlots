<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="uk.co.jakelee.blacksmithslots.main.SlotActivity"
    android:background="@drawable/background_main">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:onClick="close"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info"
                android:onClick="openLog"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/vipLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SlotText"
                android:background="@drawable/box_metal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:onClick="openVip"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/currentLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SlotText"
                android:onClick="levelInfo"
                android:layout_margin="3dp"/>
            <ProgressBar
                android:id="@+id/currentLevelProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="10000"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:onClick="levelInfo"
                android:minHeight="30dp"
                android:maxHeight="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/inventoryContainer"
            android:layout_width="match_parent"
            app:layout_widthPercent="33%"
            android:layout_height="match_parent"
            android:layout_below="@id/topBar"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/resourceDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_tile"
                android:layout_margin="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="12dp" />
            <ScrollView
                android:id="@+id/inventory"
                android:layout_below="@id/resourceDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_tile"
                android:layout_margin="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:fadeScrollbars="false">
                <TableLayout
                    android:id="@+id/inventoryDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:shrinkColumns="1" />
            </ScrollView>
        </android.support.percent.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/slotArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/inventoryContainer"
            android:layout_below="@id/topBar">
            <LinearLayout
                android:id="@+id/bottomBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/background_brown">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_yellow"
                    android:onClick="decreaseStake"
                    android:rotation="180"/>
                <uk.co.jakelee.blacksmithslots.components.FontTextView
                    android:id="@+id/amountGambled"
                    android:background="@drawable/box_yellow"
                    style="@style/SlotText"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_yellow"
                    android:onClick="increaseStake"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_orange"
                    android:onClick="decreaseRows"
                    android:rotation="180"/>
                <uk.co.jakelee.blacksmithslots.components.FontTextView
                    android:id="@+id/rowsActive"
                    android:background="@drawable/box_orange"
                    style="@style/SlotText"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_orange"
                    android:onClick="increaseRows"/>
                <uk.co.jakelee.blacksmithslots.components.FontTextView
                    android:id="@+id/spinButton"
                    android:layout_width="wrap_content"
                    android:background="@drawable/box_filled_green"
                    android:onClick="spin"
                    style="@style/SlotText"/>
                <uk.co.jakelee.blacksmithslots.components.FontTextView
                    android:id="@+id/autospinButton"
                    android:layout_width="match_parent"
                    android:background="@drawable/box_filled_green"
                    android:text="A"
                    android:onClick="autospin"
                    style="@style/SlotText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/slotContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/bottomBar">
            </LinearLayout>
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:id="@+id/croutonview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="closeAlert"/>

</android.support.percent.PercentRelativeLayout>