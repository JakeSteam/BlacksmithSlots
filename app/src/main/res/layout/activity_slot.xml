<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="uk.co.jakelee.blacksmithslots.main.SlotActivity">

    <TextView
        android:id="@+id/amountGambled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rowsActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amountGambled"/>

    <LinearLayout
        android:id="@+id/inventoryContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/rowsActive"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/routesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/inventoryContainer"
        android:orientation="vertical"/>

    <TextView android:id="@+id/slotResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#F00"/>

    <Button android:id="@+id/spinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_above="@id/slotResult"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:onClick="spin"
        android:text="Spin wheels"/>

    <LinearLayout
        android:id="@+id/slotContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/spinButton">
    </LinearLayout>



</RelativeLayout>