<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="uk.co.jakelee.blacksmithslots.main.SlotActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/mainSlotArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp">
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:onClick="close"/>
            <ImageView
                android:id="@+id/logButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/log"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/vipLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SlotText"
                android:background="@drawable/box_metal"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/currentLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SlotText"
                android:background="@drawable/box_metal"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_margin="3dp"/>
            <ProgressBar
                android:id="@+id/currentLevelProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="10000"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:minHeight="30dp"
                android:maxHeight="30dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/inventoryContainer"
            android:layout_width="match_parent"
            app:layout_widthPercent="33%"
            android:layout_height="match_parent"
            android:layout_below="@id/topBar"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/resourceDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_brown"
                android:layout_margin="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="15dp" />
            <ScrollView
                android:id="@+id/inventory"
                android:layout_below="@id/resourceDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_brown"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="15dp"
                android:fadeScrollbars="false">
                <TableLayout
                    android:id="@+id/inventoryDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:shrinkColumns="1" />
            </ScrollView>
        </android.support.percent.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/slotArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/inventoryContainer"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/topBar"
            android:background="@drawable/background_brown">
            <LinearLayout
                android:id="@+id/bottomBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/stakeModifiers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/decreaseStake"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/arrow_yellow"
                        android:rotation="180"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/box_yellow"
                        style="@style/SlotText">
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/amountGambled"
                            style="@style/SlotSubText"/>
                        <uk.co.jakelee.blacksmithslots.components.AwesomeTextView
                            style="@style/SlotSubText"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:text="@string/icon_quantity"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/increaseStake"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/arrow_yellow"/>
                    <ImageView
                        android:id="@+id/decreaseRows"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/arrow_orange"
                        android:rotation="180"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/box_orange"
                        style="@style/SlotText">
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/rowsActive"
                            style="@style/SlotSubText"/>
                        <uk.co.jakelee.blacksmithslots.components.AwesomeTextView
                            style="@style/SlotSubText"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:text="@string/icon_rows"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/increaseRows"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/arrow_orange"/>
                </LinearLayout>
                <uk.co.jakelee.blacksmithslots.components.FontTextView
                    android:id="@+id/spinButton"
                    android:layout_width="80dp"
                    android:background="@drawable/box_filled_green"
                    style="@style/SlotText"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <uk.co.jakelee.blacksmithslots.components.AwesomeTextView
                        android:id="@+id/autospinButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/box_filled_green"
                        android:text="@string/icon_autospin"
                        android:textSize="15sp"
                        android:padding="2dp"
                        style="@style/SlotText"/>
                    <uk.co.jakelee.blacksmithslots.components.FontTextView
                        android:id="@+id/autospinsRemainingButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/box_filled_green"
                        style="@style/SlotText"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/slotContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/bottomBar">
            </LinearLayout>
            <View
                android:id="@+id/slotSwipeListener"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/slotContainer"
                android:layout_alignRight="@id/slotContainer"
                android:layout_alignTop="@id/slotContainer"
                android:layout_alignBottom="@id/slotContainer" />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:id="@+id/croutonview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="closeAlert"/>

</android.support.percent.PercentRelativeLayout>