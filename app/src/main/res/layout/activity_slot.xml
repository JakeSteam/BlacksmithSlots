<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="uk.co.jakelee.blacksmithslots.main.SlotActivity"
    android:background="@drawable/square_tan">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Close"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Info"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inventoryContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/background_brown">
            <ImageView
                android:id="@+id/resourceImage"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/resourceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/inventoryDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="0"
                android:layout_margin="5dp"
                android:background="@drawable/background_brown"/>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/slotArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/inventoryContainer"
        android:layout_below="@id/topBar">
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_brown">
            <TextView
                android:id="@+id/amountGambled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/rowsActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
            <Button android:id="@+id/spinButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:onClick="spin"
                android:text="Spin"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/slotContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/bottomBar">
        </LinearLayout>
        <ImageView
            android:id="@+id/route1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/slotContainer"
            android:layout_alignLeft="@id/slotContainer"
            android:layout_alignRight="@id/slotContainer"
            android:layout_alignBottom="@id/slotContainer"
            android:scaleType="fitXY"
            android:src="@drawable/route_5_1"/>
        <ImageView
            android:id="@+id/route2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/slotContainer"
            android:layout_alignLeft="@id/slotContainer"
            android:layout_alignRight="@id/slotContainer"
            android:layout_alignBottom="@id/slotContainer"
            android:scaleType="fitXY"
            android:src="@drawable/route_5_2"/>
        <ImageView
            android:id="@+id/route3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/slotContainer"
            android:layout_alignLeft="@id/slotContainer"
            android:layout_alignRight="@id/slotContainer"
            android:layout_alignBottom="@id/slotContainer"
            android:scaleType="fitXY"
            android:src="@drawable/route_5_3"/>
        <ImageView
            android:id="@+id/route4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/slotContainer"
            android:layout_alignLeft="@id/slotContainer"
            android:layout_alignRight="@id/slotContainer"
            android:layout_alignBottom="@id/slotContainer"
            android:scaleType="fitXY"
            android:src="@drawable/route_5_4"/>
        <ImageView
            android:id="@+id/route5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/slotContainer"
            android:layout_alignLeft="@id/slotContainer"
            android:layout_alignRight="@id/slotContainer"
            android:layout_alignBottom="@id/slotContainer"
            android:scaleType="fitXY"
            android:src="@drawable/route_5_5"/>
    </RelativeLayout>

</RelativeLayout>