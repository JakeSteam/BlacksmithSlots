<androidx.percentlayout.widget.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map7"/>

    <ImageView
        android:tag="26"
        style="@style/SlotClickArea"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="19.98%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_15"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="19.98%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="27"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="79.92%"
        app:layout_marginLeftPercent="46.62%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_10"
        app:layout_marginTopPercent="79.92%"
        app:layout_marginLeftPercent="46.62%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="28"
        style="@style/SlotClickArea"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="19.98%"
        app:layout_marginLeftPercent="26.64%"
        app:layout_heightPercent="13.32%"/>
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_15"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="33.33%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="29"
        style="@style/SlotClickArea"
        app:layout_heightPercent="13.38%"
        app:layout_marginTopPercent="19.98%"
        app:layout_marginLeftPercent="79.92%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_10"
        app:layout_marginTopPercent="19.98%"
        app:layout_marginLeftPercent="79.92%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"
            android:alpha="0.8"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:background="@drawable/box_orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"
            android:maxLines="5"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>