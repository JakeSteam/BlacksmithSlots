<androidx.percentlayout.widget.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map0"/>

    <ImageView
        android:id="@+id/farm1"
        android:tag="1"
        style="@style/FarmClickArea"
        app:layout_marginTopPercent="0%"
        app:layout_marginLeftPercent="59.94%"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="33.33%"/>
    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/farm1indicator"
        android:layout_alignLeft="@id/farm1"
        android:layout_alignBottom="@id/farm1"
        style="@style/FarmIndicator" />

    <ImageView
        android:id="@+id/farm2"
        android:tag="2"
        style="@style/FarmClickArea"
        app:layout_marginTopPercent="33.33%"
        app:layout_marginLeftPercent="59.94%"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="19.98%"/>
    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/farm2indicator"
        android:layout_alignLeft="@id/farm2"
        android:layout_alignBottom="@id/farm2"
        style="@style/FarmIndicator" />

    <ImageView
        android:id="@+id/farm3"
        android:tag="3"
        style="@style/FarmClickArea"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="53.28%"
        app:layout_heightPercent="13.32%"
        app:layout_widthPercent="19.98%"/>
    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/farm3indicator"
        android:layout_alignLeft="@id/farm3"
        android:layout_alignBottom="@id/farm3"
        style="@style/FarmIndicator" />

    <ImageView
        android:id="@+id/farm4"
        android:tag="4"
        style="@style/FarmClickArea"
        app:layout_marginTopPercent="39.96%"
        app:layout_marginLeftPercent="39.96%"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="13.32%"/>
    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/farm4indicator"
        android:layout_alignLeft="@id/farm4"
        android:layout_alignBottom="@id/farm4"
        style="@style/FarmIndicator" />

    <ImageView
        android:id="@+id/farm5"
        android:tag="5"
        style="@style/FarmClickArea"
        app:layout_marginTopPercent="19.98%"
        app:layout_marginLeftPercent="13.32%"
        app:layout_heightPercent="26.64%"
        app:layout_widthPercent="19.98%"/>
    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/farm5indicator"
        android:layout_alignLeft="@id/farm5"
        android:layout_alignBottom="@id/farm5"
        style="@style/FarmIndicator" />

    <ImageView
        android:id="@+id/farm6"
        android:tag="6"
        style="@style/FarmClickArea"
        app:layout_marginTopPercent="59.94%"
        app:layout_marginLeftPercent="13.32%"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="13.32%"/>
    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/farm6indicator"
        android:layout_alignLeft="@id/farm6"
        android:layout_alignBottom="@id/farm6"
        style="@style/FarmIndicator" />

</androidx.percentlayout.widget.PercentRelativeLayout>