<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map2"/>

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="12.5%"
        app:layout_marginLeftPercent="11.1%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="37.5%"
        app:layout_marginLeftPercent="11.1%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="37.5%"
        app:layout_marginLeftPercent="33.3%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="50%"
        app:layout_marginLeftPercent="44.4%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="25%"
        app:layout_marginLeftPercent="44.4%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="25%"
        app:layout_marginLeftPercent="66.6%" />

</android.support.percent.PercentRelativeLayout>