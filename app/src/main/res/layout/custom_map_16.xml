<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map16"/>

    <ImageView
        android:tag="73"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="53.28%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_36"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="53.28%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="74"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="13.32%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_34"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="13.32%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="75"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="13.32%"
        app:layout_marginLeftPercent="13.32%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_35"
        app:layout_marginTopPercent="13.32%"
        app:layout_marginLeftPercent="13.32%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="76"
        style="@style/SlotClickArea"
        app:layout_widthPercent="13.32%"
        app:layout_heightPercent="13.32%"
        app:layout_marginTopPercent="13.32%"
        app:layout_marginLeftPercent="46.62%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_32"
        app:layout_marginTopPercent="16.32%"
        app:layout_marginLeftPercent="49.62%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="77"
        style="@style/SlotClickArea"
        app:layout_widthPercent="13.32%"
        app:layout_heightPercent="13.32%"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="66.66%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_33"
        app:layout_marginTopPercent="73.26%"
        app:layout_marginLeftPercent="66.66%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/redText"
            android:textSize="30sp"
            android:gravity="center" />
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>