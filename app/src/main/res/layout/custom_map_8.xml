<androidx.percentlayout.widget.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map8"/>

    <ImageView
        android:tag="30"
        style="@style/SlotClickArea"
        app:layout_heightPercent="13.32%"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="59.94%"
        app:layout_marginLeftPercent="13.32%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_10"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="13.32%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="31"
        style="@style/SlotClickArea"
        app:layout_heightPercent="26.66%"
        app:layout_widthPercent="26.64%"
        app:layout_marginTopPercent="46.62%"
        app:layout_marginLeftPercent="33.33%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_4"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="39.98%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="32"
        style="@style/SlotClickArea"
        app:layout_heightPercent="13.32%"
        app:layout_widthPercent="19.98%"
        app:layout_marginTopPercent="86.58%"
        app:layout_marginLeftPercent="53.28%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_2"
        app:layout_marginTopPercent="93.24%"
        app:layout_marginLeftPercent="66.66%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="33"
        style="@style/SlotClickArea"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="79.92%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_14"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="86.58%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="34"
        style="@style/SlotClickArea"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="6.66%"
        app:layout_marginLeftPercent="66.66%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_16"
        app:layout_marginTopPercent="19.98%"
        app:layout_marginLeftPercent="73.26%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="35"
        style="@style/SlotClickArea"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="0%"
        app:layout_marginLeftPercent="39.96%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_3"
        app:layout_marginTopPercent="13.38%"
        app:layout_marginLeftPercent="39.96%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"
            android:alpha="0.8"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:background="@drawable/box_orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"
            android:maxLines="5"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>