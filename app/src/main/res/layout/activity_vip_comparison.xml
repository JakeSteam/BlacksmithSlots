<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.jakelee.blacksmithslots.main.VipComparisonActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:onClick="close"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:clickable="true"
        android:background="@drawable/box_yellow"
        style="@style/VerticalScrollbar"
        android:onClick="suppress">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/activityTitle"
                android:layout_width="wrap_content"
                style="@style/DataText"
                android:text="@string/vip_comparison"
                android:textSize="45sp"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/vipDescription"
                android:layout_width="wrap_content"
                style="@style/DataText"
                android:text="@string/vip_comparison_info"
                android:textSize="19sp"
                android:maxLines="8"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/VerticalScrollbar">
                <TableLayout
                    android:id="@+id/comparisonTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:divider="?android:attr/dividerHorizontal"
                    android:showDividers="middle">
                    <TableRow>
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/vipLevel"
                            android:maxWidth="50dp"
                            android:text="@string/vip_level"
                            style="@style/VipHeader"/>
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/chestRestock"
                            android:maxWidth="65dp"
                            android:text="@string/chest_cooldown"
                            style="@style/VipHeader"/>
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/chestBoost"
                            android:maxWidth="65dp"
                            android:text="@string/reward_boost"
                            style="@style/VipHeader"/>
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/advertRestock"
                            android:maxWidth="65dp"
                            android:text="@string/advert_cooldown"
                            style="@style/VipHeader"/>
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/dailyBonus"
                            android:maxWidth="65dp"
                            android:text="@string/daily_bonus"
                            style="@style/VipHeader"/>
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/maxAutospins"
                            android:maxWidth="70dp"
                            android:text="@string/autospins"
                            style="@style/VipHeader"/>
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/extraWildcards"
                            android:maxWidth="85dp"
                            android:text="@string/extra_wildcards"
                            style="@style/VipHeader"/>
                        <uk.co.jakelee.blacksmithslots.components.FontTextView
                            android:id="@+id/subredditFlair"
                            android:maxWidth="85dp"
                            android:text="@string/subreddit_flair"
                            style="@style/VipHeader"/>
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>

            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/upgradeButton"
                style="@style/SlotText"
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/box_green"
                android:text="@string/upgrade_vip_level" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:onClick="close"/>

    <LinearLayout
        android:id="@+id/croutonview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="closeAlert"/>
</RelativeLayout>
