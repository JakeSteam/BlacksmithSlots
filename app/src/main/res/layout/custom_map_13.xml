<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map13"/>

    <ImageView
        android:tag="58"
        style="@style/SlotClickArea"
        app:layout_heightPercent="13.32%"
        app:layout_marginTopPercent="73.26%"
        app:layout_marginLeftPercent="19.98%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_10"
        app:layout_marginTopPercent="73.26%"
        app:layout_marginLeftPercent="19.98%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="59"
        style="@style/SlotClickArea"
        app:layout_heightPercent="13.32%"
        app:layout_marginTopPercent="19.98%"
        app:layout_marginLeftPercent="33.33%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_14"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="33.33%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="60"
        style="@style/SlotClickArea"
        app:layout_heightPercent="13.32%"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="53.28%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_16"
        app:layout_marginTopPercent="73.26%"
        app:layout_marginLeftPercent="53.28%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="61"
        style="@style/SlotClickArea"
        app:layout_widthPercent="19.98%"
        app:layout_marginTopPercent="39.96%"
        app:layout_marginLeftPercent="59.94%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_17"
        app:layout_marginTopPercent="39.96%"
        app:layout_marginLeftPercent="72.5%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="62"
        style="@style/SlotClickArea"
        app:layout_heightPercent="26.64%"
        app:layout_widthPercent="33.33%"
        app:layout_marginTopPercent="6.66%"
        app:layout_marginLeftPercent="66.66%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_24"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="83%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/redText"
            android:textSize="30sp"
            android:gravity="center" />
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>