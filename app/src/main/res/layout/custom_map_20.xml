<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map20"/>

    <ImageView
        android:tag="99"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="59.94%"
        app:layout_marginLeftPercent="79.92%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_42"
        app:layout_marginTopPercent="59.94%"
        app:layout_marginLeftPercent="79.92%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="100"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="33.33%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_42"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="33.33%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:background="@drawable/box_orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"
            android:maxLines="5"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>