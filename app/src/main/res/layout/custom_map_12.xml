    <ImageView
        android:tag="53"
        style="@style/SlotClickArea"
        app:layout_heightPercent="19.98%"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="66.66%" />
