<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map1"/>

    <uk.co.jakelee.blacksmithslots.components.FontTextView
        style="@style/SidebarText"
        android:text="@string/map_1"/>

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="10%"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="20%"/>

</android.support.percent.PercentRelativeLayout>