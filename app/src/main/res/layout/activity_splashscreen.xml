<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp">
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:visibility="invisible"
            android:id="@+id/startButton"
            style="@style/SlotText"
            android:layout_height="40dp"
            android:background="@drawable/box_orange"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="@string/skip"/>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:layout_toLeftOf="@id/startButton"
            android:progressDrawable="@drawable/custom_progress_bar_simple"
            android:minHeight="40dp"
            android:maxHeight="40dp"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/startButton"
            style="@style/SlotText"
            android:background="@color/transparent"/>
    </RelativeLayout>

    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="First everything was fine :D"
        style="@style/FontSize"/>

    <ImageView
        android:id="@+id/globe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_above="@id/bottomBar"
        android:layout_below="@id/topBar"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:src="@drawable/globe"/>
</RelativeLayout>