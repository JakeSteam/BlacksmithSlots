<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map15"/>

    <ImageView
        android:tag="68"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="19.98%"
        app:layout_marginLeftPercent="86.58%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_27"
        app:layout_marginTopPercent="19.98%"
        app:layout_marginLeftPercent="86.58%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="69"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="19.98%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_29"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="19.98%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="70"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="53.28%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_29"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="53.28%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="71"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="73.26%"
        app:layout_marginLeftPercent="53.28%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_30"
        app:layout_marginTopPercent="73.26%"
        app:layout_marginLeftPercent="53.28%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="72"
        style="@style/SlotClickArea"
        app:layout_widthPercent="26.64%"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="19.98%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_31"
        app:layout_marginTopPercent="53.28%"
        app:layout_marginLeftPercent="33.33%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"
            android:alpha="0.8"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:background="@drawable/box_orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"
            android:maxLines="5"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>