<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:onClick="loadSidebar"
        android:src="@drawable/map3"/>

    <ImageView
        android:tag="7"
        style="@style/SlotClickArea"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="6.66%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_5"
        app:layout_marginTopPercent="26.64%"
        app:layout_marginLeftPercent="6.66%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="8"
        style="@style/SlotClickArea"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="39.96%"
        app:layout_marginLeftPercent="26.64%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_6"
        app:layout_marginTopPercent="39.96%"
        app:layout_marginLeftPercent="26.64%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="9"
        style="@style/SlotClickArea"
        app:layout_heightPercent="23.2%"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="49.95%"
        app:layout_marginLeftPercent="33.33%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_8"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="33.33%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="10"
        style="@style/SlotClickArea"
        app:layout_heightPercent="7.25%"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="66.66%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_7"
        app:layout_marginTopPercent="66.66%"
        app:layout_marginLeftPercent="73.26%"
        style="@style/SlotPerson"/>

    <ImageView
        android:tag="11"
        style="@style/SlotClickArea"
        app:layout_widthPercent="13.32%"
        app:layout_marginTopPercent="33.33%"
        app:layout_marginLeftPercent="86.58%" />
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/person_9"
        app:layout_marginTopPercent="33.33%"
        app:layout_marginLeftPercent="86.58%"
        style="@style/SlotPerson"/>

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"
            android:alpha="0.8"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:background="@drawable/box_orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"
            android:maxLines="5"
            android:gravity="center"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>