<android.support.percent.PercentRelativeLayout android:id="@+id/shapeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <uk.co.jakelee.blacksmithslots.components.FontTextView
        style="@style/SidebarText"
        android:text="@string/map_3"/>

    <ImageView
        android:id="@+id/wallpaper_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:onClick="loadSidebar"
        android:src="@drawable/map3"/>

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="12.5%"
        app:layout_marginLeftPercent="22.2%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="50%"
        app:layout_marginLeftPercent="11.1%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="62.5%"
        app:layout_marginLeftPercent="33.3%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="37.5%"
        app:layout_marginLeftPercent="33.3%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="37.5%"
        app:layout_marginLeftPercent="55.5%" />

    <ImageView
        android:tag="1"
        style="@style/SlotClickArea"
        app:layout_marginTopPercent="12.5%"
        app:layout_marginLeftPercent="77.7%" />

    <RelativeLayout
        android:id="@+id/lockedMapBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="suppress">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/lockedMapText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/redText"
            android:textSize="30sp"
            android:gravity="center" />
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>