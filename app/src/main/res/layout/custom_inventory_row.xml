<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inventoryRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"/>

    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/itemInfo"
        android:layout_width="wrap_content"
        android:maxLines="5"
        style="@style/DataText"/>

    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/itemSources"
        android:layout_width="wrap_content"
        android:background="@drawable/box_green"
        android:text="@string/itemSourcesButton"
        android:onClick="itemSources"
        android:maxLines="2"
        android:layout_margin="5dp"
        style="@style/SlotText"/>

    <uk.co.jakelee.blacksmithslots.components.FontTextView
        android:id="@+id/itemUses"
        android:layout_width="wrap_content"
        android:background="@drawable/box_orange"
        android:text="@string/itemUsesButton"
        android:onClick="itemUses"
        android:maxLines="2"
        android:layout_margin="5dp"
        style="@style/SlotText"/>
</TableRow>