<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.jakelee.blacksmithslots.main.MapActivity">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/shapeLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/wallpaper_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/map"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="140dp"
                    android:onClick="openSlot"
                    android:tag="1"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="58%" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="140dp"
                    android:onClick="openSlot"
                    android:tag="2"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="43%" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="140dp"
                    android:onClick="openSlot"
                    android:tag="3"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="28%" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="270dp"
                    android:onClick="openSlot"
                    android:tag="4"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="43%" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="330dp"
                    android:onClick="openSlot"
                    android:tag="5"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="43%" />


            </android.support.percent.PercentRelativeLayout>
        </HorizontalScrollView>
</RelativeLayout>
