<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.jakelee.blacksmithslots.main.MapActivity">

    <RelativeLayout
        android:id="@+id/sidebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="33%"
        android:layout_alignParentRight="true">
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/slotTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="left"
            style="@style/SlotText"/>
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/slotDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slotTitle"
            android:maxLines="999"
            android:gravity="left"
            style="@style/SlotText"/>
        <RelativeLayout
            android:id="@+id/lockedSlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/slotDescription"
            android:visibility="gone">
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/taskProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                style="@style/SlotText"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/taskText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskProgress"
                android:gravity="left"
                style="@style/SlotText"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/taskRequirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskText"
                android:gravity="left"
                style="@style/SlotText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hand in?"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/unlockedSlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/slotDescription">
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/slotResource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                style="@style/SlotText"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/slotReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slotResource"
                android:gravity="left"
                style="@style/SlotText"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go!"
                android:layout_alignParentBottom="true"
                android:onClick="openSlot"/>
        </RelativeLayout>

    </RelativeLayout>

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/sidebar">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/shapeLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/wallpaper_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/map"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="140dp"
                    android:onClick="selectSlot"
                    android:tag="1"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="58%" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="140dp"
                    android:onClick="selectSlot"
                    android:tag="2"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="43%" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="140dp"
                    android:onClick="selectSlot"
                    android:tag="3"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="28%" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="270dp"
                    android:onClick="selectSlot"
                    android:tag="4"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="43%" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="330dp"
                    android:onClick="selectSlot"
                    android:tag="5"
                    android:alpha="0.6"
                    android:src="@color/white"
                    app:layout_heightPercent="13%"
                    app:layout_marginTopPercent="43%" />


            </android.support.percent.PercentRelativeLayout>
        </HorizontalScrollView>
</android.support.percent.PercentRelativeLayout>
