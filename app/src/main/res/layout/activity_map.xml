<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.jakelee.blacksmithslots.main.MapActivity">

    <RelativeLayout
        android:id="@+id/sidebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="33%"
        android:padding="10dp"
        android:layout_alignParentRight="true">
        <uk.co.jakelee.blacksmithslots.components.FontTextView
            android:id="@+id/slotTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            style="@style/SidebarText"/>
        <LinearLayout
            android:id="@+id/slotInfo"
            android:layout_below="@id/slotTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/person"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@drawable/person_1"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/slotDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                style="@style/SidebarText"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/superlockedSlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/slotInfo"
            android:visibility="gone">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lockedSlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/slotInfo"
            android:visibility="gone">
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/taskProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SidebarText"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/taskText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskProgress"
                style="@style/SidebarText"/>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/taskRequirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskText"
                style="@style/SidebarText"/>
            <Button
                android:id="@+id/handInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hand in?"
                android:onClick="handIn"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/unlockedSlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/slotInfo">
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/slotResource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="Resource:"
                style="@style/SidebarText"/>
            <HorizontalScrollView
                android:id="@+id/resourceRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slotResource">
                <LinearLayout
                    android:id="@+id/resourceContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
            <uk.co.jakelee.blacksmithslots.components.FontTextView
                android:id="@+id/slotReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_below="@id/resourceRow"
                android:text="Rewards:"
                style="@style/SidebarText"/>
            <HorizontalScrollView
                android:id="@+id/rewardRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slotReward">
                <LinearLayout
                    android:id="@+id/rewardContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go!"
                android:layout_alignParentBottom="true"
                android:onClick="openSlot"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/noSlotSelected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <Button
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openSettings" />
            <Button
                android:id="@+id/statistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openStatistics"
                android:layout_below="@id/settings"/>
            <Button
                android:id="@+id/inventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openInventory"
                android:layout_below="@id/statistics"/>
            <Button
                android:id="@+id/claimBonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="claimPeriodicBonus"
                android:layout_below="@id/inventory"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/townScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sidebar"/>

    <LinearLayout
        android:id="@+id/croutonview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="closeAlert"/>
</android.support.percent.PercentRelativeLayout>
